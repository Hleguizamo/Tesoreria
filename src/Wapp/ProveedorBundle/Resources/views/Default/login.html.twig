{% extends '::base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link type="text/css" rel="stylesheet" href="{{ asset('css/estilos.css') }}" />
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/jKey/jquery.jkey.min.js') }}"></script>
{% endblock %}
{% block body %}
<div class="uk-text-center">
    <div class="row">
			
        <div class="col-sm-12">
			{% if app.request.get('error') %}
				<div class="alert alert-danger">
					Usuario y/o Contraseña invalidos
				</div>
			{% endif %}
            <div class="well">			
        <form class="uk-panel uk-panel-box uk-form" method="POST" action="{{ path('proveedor_default_login_check') }}" id="autenticarForm" autocomplete="off">
			<legend><i class="fa fa-lock"></i> Iniciar Sesión - Proveedores</legend>
			
            <div class="form-group">
				<label for="username">Usuario</label>
                <input type="text" placeholder="Usuario" required value="{% if last_username is defined %}{{ last_username }}{% endif %}" name="_username" id="usuario" class="form-control">
            </div>
            <div class="form-group">
				<label for="password">Contraseña</label>
                <input type="password" placeholder="Contraseña" required value="" name="_password" id="clave" class="form-control">
            </div>
            <div class="form-group">                
				<button type="submit" class="btn btn-primary">
					<i class="fa fa-sign-in"></i> Iniciar Sesión
				</button>
            </div>			
        </form>
		</div>
		</div>
    </div>
</div>
{% endblock %}
